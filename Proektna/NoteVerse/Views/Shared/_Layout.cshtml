<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NoteVerse</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-image: url('../../content/images/bg_navbar.png');">
        <div class="container">

            <a class="navbar-brand" href="/">
                <span class="note">Note</span>
                <span class="verse">Verse</span>
            </a>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1 justify-content-md-evenly">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Notes", "Index", "Notes", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Grouped Notes", "GroupedNotes", "Notes", new { area = "" }, new { @class = "navbar-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - NoteVerse - Note taking application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/noteverse")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
